<script>
        // Initial state for the user's financial data
        let userData = {
            name: 'Ray A Frasure',
            userId: 'PCH-2024-00123',
            balance: 70000000.00,
            transactions: [
                { type: 'credit', description: 'Initial Prize Deposit', amount: 70000000.00, date: 'October 25, 2025', ref: '#PCH-START-001' },
                { type: 'debit', description: 'Federal Tax Withholding', amount: 4000.00, date: 'October 26, 2025', ref: 'TAX-FED-WTH' },
                { type: 'debit', description: 'Transfer to Personal Bank (First Draw)', amount: 500.00, date: 'November 1, 2025', ref: '#TX-P-001' },
                { type: 'debit', description: 'Account Management Fee', amount: 50.00, date: 'November 1, 2025', ref: 'FEE-ACCT-NOV' },
            ],
        };

        // --- DOM Elements ---
        const navLinks = document.querySelectorAll('nav a');

        /**
         * Formats a number as currency string.
         * @param {number} amount - The numeric amount.
         * @returns {string} The formatted currency string.
         */
        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD',
                minimumFractionDigits: 2,
                maximumFractionDigits: 2,
            }).format(amount);
        }

        /**
         * Calculates the current balance and updates all related displays.
         */
        function updateBalanceDisplay() {
            // Recalculate balance based on transaction history
            let currentBalance = userData.transactions.reduce((total, t) => {
                if (t.type === 'credit') {
                    return total + t.amount;
                } else if (t.type === 'debit') {
                    return total - t.amount;
                }
                return total;
            }, 0);

            userData.availableBalance = currentBalance;

            // Update UI elements
            document.getElementById('main-balance').textContent = formatCurrency(currentBalance);
            document.getElementById('card-lifetime').textContent = formatCurrency(userData.transactions.find(t => t.description === 'Initial Prize Deposit').amount);
            document.getElementById('card-available').textContent = formatCurrency(currentBalance);

            renderTransactionList();
        }

        /**
         * Renders the transaction history list dynamically.
         */
        function renderTransactionList() {
            const listEl = document.getElementById('transaction-list');
            listEl.innerHTML = ''; // Clear existing list

            // Sort by date (newest first - simple sorting based on index for this example)
            const sortedTransactions = [...userData.transactions].reverse();

            sortedTransactions.forEach(t => {
                const isCredit = t.type === 'credit';
                const sign = isCredit ? '+' : '-';
                const colorClass = isCredit ? 'text-success-green' : 'text-danger-red';
                const bgColorClass = isCredit ? 'bg-green-50' : 'bg-red-50';

                const transactionHtml = `
<div class="flex justify-between items-center p-4 rounded-lg ${bgColorClass} border border-gray-100">
<div>
<p class="font-semibold text-gray-800">${t.description}</p>
<p class="text-xs text-gray-500">${t.date} | Reference: ${t.ref}</p>
</div>
<span class="text-xl font-bold ${colorClass}">${sign}${formatCurrency(t.amount)}</span>
</div>
                `;
                listEl.insertAdjacentHTML('beforeend', transactionHtml);
            });
             // Add a placeholder item at the end
             listEl.insertAdjacentHTML('beforeend', '<div class="text-center p-4 text-gray-400 text-sm">-- All transactions shown --</div>');
        }

        /**
         * Switches the content shown in the main panel and handles nav link styling.
         * @param {string} contentId - The prefix of the content element to show (e.g., 'transfers').
         */
        function showContent(contentId) {
            // Hide all sub-content areas. Updated list to include the new content.
            ['transactions', 'transfers', 'documents', 'profile', 'agent-contact'].forEach(id => {
                document.getElementById(id + '-content').classList.add('hidden');
            });

            // Show the requested content area
            const targetElement = document.getElementById(contentId + '-content');
            if (targetElement) {
                targetElement.classList.remove('hidden');
            }

            // Update active navigation state
            navLinks.forEach(link => {
                // Clear active state on all links
                link.classList.remove('bg-light-bg', 'text-pch-blue', 'font-bold');
                link.classList.add('text-gray-700');

                // Add active state to the current link, checking for the onclick attribute
                if (link.getAttribute('onclick').includes(`'${contentId}'`)) {
                    link.classList.remove('text-gray-700');
                    link.classList.add('bg-light-bg', 'text-pch-blue', 'font-bold');
                }
            });
            // Also update the dedicated transaction button since it's not in the navLinks query
            const txButton = document.querySelector('button[onclick="showContent(\'transactions\'); return false;"]');
            if (txButton) {
                 txButton.classList.remove('bg-light-bg', 'text-pch-blue', 'font-bold');
                 txButton.classList.add('text-gray-700');
                 if (contentId === 'transactions') {
                     txButton.classList.remove('text-gray-700');
                     txButton.classList.add('bg-light-bg', 'text-pch-blue', 'font-bold');
                 }
            }


            // If switching away from transfers, clear the message
            if (contentId !== 'transfers') {
                document.getElementById('transfer-message').classList.add('hidden');
            }
        }

        /**
         * Handles form submission: performs basic validation, shows processing message, and redirects to Agent Contact.
         * @param {Event} event - The form submit event.
         */
        function processTransfer(event) {
            event.preventDefault();

            const amountInput = document.getElementById('transfer-amount');
            const destinationInput = document.getElementById('destination-bank');
            const accountNumberInput = document.getElementById('account-number');

            const amount = parseFloat(amountInput.value);
            const destination = destinationInput.value;
            const accountNumber = accountNumberInput.value.trim();

            const messageEl = document.getElementById('transfer-message');

            messageEl.classList.add('hidden');

            // --- Basic Validation ---
            if (isNaN(amount) || amount <= 0 || destination === 'Select Bank' || accountNumber === '') {
                messageEl.textContent = 'Please fill out all fields (Amount, Bank, and Account Number) to submit your request.';
                messageEl.classList.remove('text-success-green', 'bg-green-100');
                messageEl.classList.add('text-danger-red', 'bg-red-100', 'border-danger-red', 'border');
                messageEl.classList.remove('hidden');
                return;
            }

            // Simple fund check
            if (amount > userData.availableBalance) {
                messageEl.textContent = `Error: Insufficient available funds. You only have ${formatCurrency(userData.availableBalance)} available.`;
                messageEl.classList.remove('text-success-green', 'bg-green-100');
                messageEl.classList.add('text-danger-red', 'bg-red-100', 'border-danger-red', 'border');
                messageEl.classList.remove('hidden');
                return;
            }

            // Show processing message
            messageEl.textContent = `Transfer request for ${formatCurrency(amount)} submitted. Reviewing details and redirecting...`;
            messageEl.classList.remove('text-danger-red', 'bg-red-100', 'border-danger-red', 'border');
            messageEl.classList.add('text-pch-blue', 'bg-blue-100', 'border-pch-blue', 'border');
            messageEl.classList.remove('hidden');

            // Simulate processing delay and redirect to Agent Contact page
            setTimeout(() => {
                document.getElementById('transfer-form').reset();
                messageEl.classList.add('hidden');
                showContent('agent-contact');
            }, 1500);
        }

        // Initialize the dashboard when the script loads
        window.onload = function() {
            updateBalanceDisplay();
            showContent('transactions'); // Ensure the default tab is active and highlighted
        };
</script>
</body>
</html>


